<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Property para simplificar configuração -->
    <property name="LOG_PATTERN" 
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [traceId=%X{traceId:-}, spanId=%X{spanId:-}, correlationId=%X{correlationId:-}] - %msg%n"/>

    <!-- Appender para console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Appender para arquivo (opcional, útil para produção) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/toolschallenge.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/toolschallenge.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Loggers específicos -->
    <logger name="br.com.sicredi.toolschallenge" level="INFO"/>
    
    <!-- Silenciar CorrelationIdFilter DEBUG logs -->
    <logger name="br.com.sicredi.toolschallenge.infra.tracing.CorrelationIdFilter" level="INFO"/>
    
    <!-- Silenciar logs de schedulers (DLQ/Reprocessamento) -->
    <logger name="br.com.sicredi.toolschallenge.infra.auditoria.service.AuditoriaScheduler" level="ERROR"/>
    <logger name="br.com.sicredi.toolschallenge.infra.outbox.processor.OutboxProcessor" level="ERROR"/>
    <logger name="br.com.sicredi.toolschallenge.infra.scheduled.ReprocessamentoScheduler" level="ERROR"/>
    
    <!-- Silenciar warnings repetitivos de DLQ (apenas ERRORs críticos) -->
    <logger name="br.com.sicredi.toolschallenge.pagamento.service.PagamentoService" level="ERROR"/>
    <logger name="br.com.sicredi.toolschallenge.estorno.service.EstornoService" level="ERROR"/>
    
    <!-- Silenciar warnings do Spring Data Redis sobre repository assignment -->
    <logger name="org.springframework.data.repository.config.RepositoryConfigurationExtensionSupport" level="ERROR"/>
    <logger name="org.springframework.data.repository.config.RepositoryConfigurationDelegate" level="ERROR"/>
    
    <!-- Silenciar baggage propagation debug -->
    <logger name="io.micrometer.tracing.otel.propagation.BaggageTextMapPropagator" level="WARN"/>
    
    <!-- Outros frameworks -->
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.kafka" level="WARN"/>
    <logger name="org.apache.kafka" level="WARN"/>
    <logger name="org.hibernate" level="INFO"/>
    <logger name="io.micrometer.tracing" level="WARN"/>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <!-- Descomentar para habilitar logs em arquivo -->
        <!-- <appender-ref ref="FILE"/> -->
    </root>

</configuration>
